<h2>{{model.heading}}</h2>
<h4>{{model.content}}</h4>
<img src="{{model.image}}">

<h2>Responses</h2>
{{add-response saveResponse="saveResponse" thread=model}}
<ul>
  {{#each model.responses as |response|}}
    {{response-tile response=response editResponse="editResponse" destroyResponse="destroyResponse"}}
  {{/each}}
</ul>
