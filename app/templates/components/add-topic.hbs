{{#if addNewTopic}}
  <div class="topicForm">
    <form>
      <div class="form-group">
        <label for="title">Topic Title: </label>
        <h3>{{input value=title id="title" placeholder="your topic"}}</h3>
      </div>
      <div class="form-group">
        <label for="details">Details: </label>
        {{input value=details id="details" placeholder="your name"}}
      </div>

      <button type="button" class="btn btn-outline btn-primary" {{action 'save'}}>Save</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-outline btn-success btn-lg" {{action 'topicFormShow'}}>Add a Topic</button>
{{/if}}
