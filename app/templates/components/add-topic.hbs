{{#if addNewTopic}}
  <div class="topicForm">
    <form>
      <div class="form-group">
        <label for="title"><h3>Topic Title:</h3> </label>
        <h4>{{input value=title id="title" placeholder="Topic title"}}</h4>
      </div>
      <div class="form-group">
        <label for="details"><h3>Details:</h3> </label>
        <h4>{{textarea class="form-control" rows="2" value=details id="details" placeholder="Topic details"}}</h4>
      </div>

      <button type="button" class="btn btn-outline btn-success" {{action 'saveTopic'}}>Save</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-success" {{action 'topicFormShow'}}><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a Topic</button>
{{/if}}
