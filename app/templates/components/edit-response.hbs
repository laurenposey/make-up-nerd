{{#if editResponseForm}}
<div class="modal edit-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Edit</h3> <p>{{response.label}}</p>
      </div>
      <div class="edit">
        <form>
          <div class="form-group">
            <label for="label">Title: </label>
            {{input value=label id="label" placeholder=response.label}}
          </div>
          <div class="form-group">
            <label for="text">Text: </label>
            {{textarea class="form-control" rows="1" value=text id="text" placeholder=response.text}}
          </div>

          <div class="form-group">
            <label for="visitor">Visitor: </label>
            {{input value=visitor id="visitor" placeholder=response.visitor}}
          </div>

          <button type="button" class="btn btn-outline btn-primary" data-dismiss="modal" {{action 'editResponse' response}}>Save</button>
        </form>
      </div>
    </div>
  </div>
</div>
  {{else}}
  <button type="button" class="btn btn-sm btn-edit" data-toggle='modal' data-target=".edit-modal" {{action 'editResponseForm'}}><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Edit a Response</button>
{{/if}}
