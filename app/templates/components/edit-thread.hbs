{{#if editThreadForm}}
<div class="modal edit-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Edit</h3><br><p>{{thread.heading}}</p>
      </div>
      <div class="edit">
        <form>
          <div class="form-group">
            <label for="heading">Thread Heading: </label>
            <br>
            {{textarea class="form-control" rows="1" value=heading id="heading" placeholder=thread.heading}}
          </div>
          <div class="form-group">
            <label for="content">Content: </label>
            {{textarea class="form-control" rows="2" value=content id="content" placeholder=thread.content}}
          </div>

          <div class="form-group">
            <label for="author">Author: </label>
            <br>
            {{input value=author id="author" placeholder=thread.author}}
          </div>
          <div class="form-group">
            <label for="image">Image:</label>
            {{input value=image id="image" class="form-control"}}
          </div>

          <button type="button" class="btn btn-outline btn-primary" data-dismiss="modal" {{action 'editThread' thread}}>Save</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{else}}
 <button type="button" class="btn btn-sm btn-edit" data-toggle='modal' data-target=".edit-modal" {{action 'editThreadForm'}}><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Edit a Thread</button>
{{/if}}
