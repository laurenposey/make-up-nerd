{{#if addNewResponse}}
<h1>New Response</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="label">Response</label>
        {{input value=label id="label" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="text">Response Text:</label>
        {{input value=text id="text" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="visitor">Author:</label>
        {{input value=visitor id="visitor" class="form-control"}}
      </div>


      <button type="button" class="btn btn-default" {{action 'saveResponse'}}>Save</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-default" {{action 'responseFormShow'}}>New Response</button>
{{/if}}
